doctype html
html
    head
        title 帆茂统一平台
        link(href='/stylesheets/bootstrap.css', rel='stylesheet')
        script(src='/javascripts/jquery-1.11.0.min.js')
        link(rel='stylesheet', href='/stylesheets/toastr.min.css')
        script(src='/javascripts/toastr.min.js')
        script(src='/javascripts/utils.js')
        script(src='/javascripts/runtime.js')
        script(src='/javascripts/template.js')
    style.
        body {
            padding-top: 40px;
            background-color: #eee;
            overflow-x: hidden;
        }

        .function-bar {
            background-color: #FFFFFF;
            border-top: 1px solid #cccccc;
            -webkit-box-shadow: 0 -5px 5px -5px rgba(0, 0, 0, .4);
            box-shadow: 0 -5px 5px -5px rgba(0, 0, 0, .4);
            position: fixed;
            left: 0;
            right: 0;
            bottom: 0;
            height: 100px;
            z-index: 10;
        }

        .container {
            background-color: #fbfcfd;
            height: 80%;
            margin-left: 20%;
            width: 60%;
            position: fixed;
            z-index: 10;
            border: 1px solid #cccccc;
            -webkit-box-shadow: 0 -5px 5px -5px rgba(0, 0, 0, .4);
            box-shadow: 0 -5px 5px -5px rgba(0, 0, 0, .4);
        }

        .hd {
            height: 33px;
            overflow: hidden;
            margin-bottom: 24px;
            border-bottom: 1px dotted #c8c8c8;
            font-size: 20px;
            font-weight: normal;
            font-family: "Microsoft YaHei", \5fae\8f6f\96c5\9ed1, arial, \5b8b\4f53;
            color: #323232;
        }

        .hf {
            height: 33px;
            overflow: hidden;
            font-size: 20px;
            font-weight: normal;
            font-family: "Microsoft YaHei", \5fae\8f6f\96c5\9ed1, arial, \5b8b\4f53;
            color: #323232;
        }

        .iptIcon {
            position: absolute;
            width: 16px;
            height: 16px;
            top: 50%;
            left: 0;
            margin-top: -8px;
            background-position: -320px 0;
        }

        #validateCode {
            fontFamily: Fixedsys;
            letterSpacing: 3px;
            color: #ff0000;
            font-size: 23px;
            background-color: #f0f1f2;
        }
    body
        .row.container
            #wrap
                .row(style="margin-left: 40px; margin-top: 40px")
                    h4.hd 设置新密码
                .row(style="margin-top: 40px")
            .row(style="margin-top: 40px")
                .col-md-4.col-md-offset-4
                    .input-group.input-group-lg
                        span.input-group-addon
                            .glyphicon.glyphicon-lock
                        input.form-control(style="width:300px", id='pwd', name='pwd', type="password", placeholder="设置新密码")
            .row(style="margin-top: 40px")
                .col-md-4.col-md-offset-4
                    .input-group.input-group-lg
                        span.input-group-addon
                            .glyphicon.glyphicon-lock
                        input.form-control(style="width:300px", id='cpwd', name='cpwd', type="password", placeholder="确认新密码")
            .row(style="margin-top: 40px")
                    .col-md-4.col-md-offset-4
                        button#next.btn.btn-lg.btn-primary(style="width:350px") 设置
    .function-bar
        .row.text-center(style='margin-top: 30px')
            p.text-muted © 2014 帆茂投资管理有限公司
script.

    $('#next').click(function (ev) {
        ev.preventDefault();
        var url = '/changePwd';
        var pwd = $('#pwd').val();
        var cpwd = $('#cpwd').val();
        if (pwd == '') {
            toastr.clear();
            toastr.info('新密码不能为空!');
            return;
        }
        if (cpwd == '') {
            toastr.clear();
            toastr.info('确认密码不能为空!');
            return;
        }
        if (cpwd !== pwd) {
            toastr.clear();
            toastr.info('输入密码不一致!');
            return;
        }
        var data = {};
        data.pwd = pwd;
        $.ajax({
            type: 'PUT',
            url: url,
            dataType: 'json',
            data: data,
            success: function (data) {
                if (data.msg.type == 'success') {
                    $('#pwd').val('');
                    $('#cpwd').val('');
                    setTimeout("javascript:location.href='/login'", 1000);
                }
                toast(data.msg);
                toast({type: 'success', body: '系统将在1s后调到登陆界面!'});
            }
        });
        return false;
    })
