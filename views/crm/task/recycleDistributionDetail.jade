.modal-header
    button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
    .row
        .col-md-12
            if task.refObj.customerRecycleDistributionType == 'promotion'
                h4.modal-title 客户回收分配任务(晋升)
            else
                h4.modal-title 客户回收分配任务(离职)
.modal-body
    .row
        table.table.mm-box
            tr.th-inverse-success
                th.text-center(style="width: 15%")  员工
                th.text-center(style="width: 20%")  创建时间
                th.text-center(style="width: 65%")  员工组长
            tbody
                tr
                    td.text-center #{task.refObj.username}(#{task.refObj.realName})
                    td.text-center #{task.ctimeStr}
                    td.text-center
                        if leaders
                            each l in leaders
                                span.m-r-5 #{l.username}(#{l.realName})
    .row
        table.table.mm-box
            tr.th-inverse-success
                th.text-center(style="width: 15%")  客户姓名
                th.text-center(style="width: 15%")  客户编号
                th.text-center(style="width: 15%")  原顾问
                th.text-center(style="width: 5%")
                th.text-center(style="width: 15%")  当前顾问
                th.text-center(style="width: 15%")  原RM
                th.text-center(style="width: 5%")
                th.text-center(style="width: 15%")  当前RM
            tbody
                each c in customers
                    tr
                        td.text-center #{c.customerName}
                        td.text-center #{c.customerCode}
                        td.text-center
                            if !_.isEmpty(c.oldBelongUser)
                                | #{c.oldBelongUser.username}(#{c.oldBelongUser.realName})
                            else
                                | 无
                        td.text-center
                            .glyphicon.glyphicon-arrow-right
                        td.text-center
                            if !_.isEmpty(c.nowBelongUser)
                                | #{c.nowBelongUser.username}(#{c.nowBelongUser.realName})
                            else
                                | 无
                        td.text-center
                            if !_.isEmpty(c.oldManager)
                                | #{c.oldManager.username}(#{c.oldManager.realName})
                            else
                                | 无
                        td.text-center
                            .glyphicon.glyphicon-arrow-right
                        td.text-center
                            if !_.isEmpty(c.nowManager)
                                | #{c.nowManager.username}(#{c.nowManager.realName})
                            else
                                | 无
.modal-footer
    .text-center
        button.cancel.btn.btn-lg.btn-info(style='margin-right: 40px;', data-dismiss='modal') 关闭